	$table_headers[] = "Description";
	$table_headers[] = "Code";
	$table_headers[] = "State";


	$table_data[] = "trigger_object";
	$table_data[] = "trigger";
	$table_data[] = "entity_name";
	$table_data[] = "entity_description";
	
	$table_data[] = "code";
	$table_data[] = "state";

}

if(isset($_["trigger"])){
	$trigger_get = $_["trigger"];
}

$db = new Entity("core","Triggers");
$triggers = $db->populate();
