		]);

	if(isset($code["code"])){
	$fields["code"] = $code["code"];
	}
	elseif(isset($code["gpio"])){
	$fields["code"] = $code["gpio"];
	}
	$fields["modifier"] = "=";


	$db = new Entity("Triggers");
